{
  "name": "SiteVision",
  "version": "0.1",
  "manifest_version": 2,

  "description": "Ett verktyg för SiteVision-nördar.",

  "page_action": {
    "default_icon": "icon.jpg",
    "default_popup": "popup.html"
  },

  "background" : {
    "scripts": ["background.js"]
  },
  "content_scripts": [
    {
      "matches": ["http://*/*", "https://*/*"],
      "js": ["content-script.js"]
    }
  ],

  "permissions": ["tabs", "webRequest", "webRequestBlocking", "*://*/editor*"]
}