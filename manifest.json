{
  "manifest_version": 2,

  "name": "SiteVision",
  "description": "Ett verktyg för SiteVision-nördar.",
  "version": "0.1",

  "permissions": ["contextMenus", "tabs", "webRequest", "webRequestBlocking", "*://*/*"],

  "page_action": {
    "default_icon": "icon.jpg",
    "default_popup": "popup.html"
  },

  "background" : {
    "scripts": ["background.js"]
  },

  "content_scripts": [
    {
      "matches": ["http://*/*", "https://*/*"],
      "js": ["content-script.js"]
    }
  ]
}