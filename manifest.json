{
  "name": "SiteVision-verktyg",
  "version": "0.4.0",
  "manifest_version": 2,

  "description": "En samling verktyg som underlättar vardagen för utvecklare och administratörer.",
  "icons": {
    "48": "icons/48.png",
    "128": "icons/128.png"
  },

  "page_action": {
    "default_icon": "icons/38.png",
    "default_popup": "page-action.html"
  },

  "background" : {
    "scripts": ["show-page-action.js", "prevent-duplicate-editors.js"]
  },
  "content_scripts": [
    {
      "matches": ["http://*/*", "https://*/*"],
      "js": ["identify-sitevision.js"]
    }
  ],

  "permissions": ["tabs", "webRequest", "webRequestBlocking", "*://*/editor*"]
}